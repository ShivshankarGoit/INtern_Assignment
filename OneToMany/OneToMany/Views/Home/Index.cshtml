@model IEnumerable<OneToMany.Models.StudentDetail>

@{
    ViewData["Title"] = "StudentDetail";
}

<h1>Student Detail</h1>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>       
        <th>
            @Html.DisplayNameFor(model => model.student_name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.courses)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
           

            <td>
                @Html.DisplayFor(modelItem => item.student_name)
            </td>
            <td>
                @foreach(var course in item.courses)
                {
                    <span>@course.course_name</span>
                }
            </td>

            <td>
                @Html.ActionLink("Create", "Create", new { id = item.student_id }) |
                @Html.ActionLink("Created", "Created", new { id = item.student_id }) |
                @Html.ActionLink("Delete", "DeleteStudentAndCourses", new { id = item.student_id })
            </td>
        </tr>
    }

</table>
