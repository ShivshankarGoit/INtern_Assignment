@model OneToMany.Models.StudentDetail

@{
    ViewBag.Title = "Delete Student and Courses";
}

<h2>Delete Student and Courses</h2>

<h3>Are you sure you want to delete this student and all associated courses?</h3>
<div>
    <h4>Student Detail:</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.student_name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.student_name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.courses)
        </dt>
        <dd>
            @foreach (var course in Model.courses)
            {
                <li>@course.course_name</li>
            }
        </dd>

    </dl>



    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>


